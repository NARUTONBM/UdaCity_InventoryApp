<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/local_popup_bg"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_goods_sale"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img1"
        android:gravity="center_horizontal"
        android:text="@string/tv_goods_sale"/>

    <TextView
        android:id="@+id/tv_goods_order"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img2"
        android:gravity="center_horizontal"
        android:text="@string/tv_goods_order"/>
</LinearLayout>